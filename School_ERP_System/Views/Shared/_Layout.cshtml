                        <li><a asp-controller="Fee" asp-action="OldBList">Old Balance List</a></li>
                        <li><a asp-controller="Fee" asp-action="FeeDeposite">Fee Deposite</a></li>
                        <li><a asp-controller="Fee" asp-action="FeeDepositeList">Fee Deposite List</a></li>
                        <li><a href="#">School Receipt</a></li>
                    </ul>
                </li>

                <li class="sidebar-dropdown">
                    <a href="#"><i class="fa-sharp fa-regular fa-receipt"></i> Report Section <i class="fa-solid fa-chevron-down dropdown-icon"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Classwise Due Report</a></li>
                        <li><a href="#">Daily Report</a></li>
                        <li><a href="#">Full Fee Submit Report</a></li>
                        <li><a href="#">Old Balance Report</a></li>
                        <li><a href="#">Headwise School Receipt Report</a></li>
