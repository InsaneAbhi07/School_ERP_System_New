@model School_ErP.Models.Tbl_StRegistration

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.StudentPhoto" class="img-thumbnail rounded-circle mb-2" width="120" height="120" />
            <h5 class="fw-bold">@Model.StudentName</h5>
            <p class="text-muted mb-1">@Model.FormNo</p>
        </div>
        <div class="col-md-8">
            <table class="table table-bordered">
                <tr><th>Class</th><td>@Model.CurrentClass</td></tr>
                <tr><th>Section</th><td>@Model.Section</td></tr>
                <tr><th>Admission Date</th><td>@Model.AdmDate</td></tr>
                <tr><th>DOB</th><td>@Model.DateOfBirth</td></tr>
                <tr><th>Father Name</th><td>@Model.FatherName</td></tr>
                <tr><th>Mother Name</th><td>@Model.MotherName</td></tr>
                <tr><th>Gender</th><td>@Model.Gender</td></tr>
                <tr><th>Address</th><td>@Model.CorrAddress</td></tr>
            </table>
        </div>
    </div>
</div>
