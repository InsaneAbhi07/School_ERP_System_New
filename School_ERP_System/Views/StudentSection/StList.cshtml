@model IEnumerable<School_ErP.Models.Tbl_StRegistration>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/globalsrch.css" rel="stylesheet" />
</head>

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="fw-semibold text-primary"><i class="fa fa-school me-2"></i>Students List</h5>
        <a asp-action="AddRegistration" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i>Add New Student
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <table id="schoolTable" class="table table-hover table-bordered align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>Sr. No</th>
                        <th>Add. Date</th>
                        <th>Student Name</th>
                        <th>Father's Name</th>
                        <th>Mother's Name</th>
                        <th>Class</th>
                        <th>Phone No.</th>
                        <th>Address</th>
                        <th>St. Photo</th>
                        <th style="width:110px;">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int sno = 1; 
                    }

                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@sno</td>
                            <td>@s.AdmDate</td> <!-- 👈 formatted date -->
                            <td>@s.StudentName</td>
                            <td>@s.FatherName</td>
                            <td>@s.MotherName</td>
                            <td>@s.CurrentClass</td>
                            <td>@s.SMSNo</td>
                            <td>@s.CorrAddress</td>
                            <td>
                                @if (!string.IsNullOrEmpty(s.StudentPhoto))
                                {
                                <img src="@s.StudentPhoto" alt="Student Photo" width="80" height="80" class="img-thumbnail" />
                                }
                                else
                                {
                                <span class="text-muted">No Photo</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="EditRegistration" asp-route-id="@s.Id"
                                   class="btn btn-warning btn-sm me-2" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <button type="button" class="btn btn-info btn-sm text-white me-2 btn-details"
                                        data-id="@s.Id" title="View">
                                    <i class="fa fa-eye"></i>
                                </button>

                                <a asp-action="DeleteRegistration" asp-route-id="@s.Id"
                                   class="btn btn-danger btn-sm"
                                   title="Delete" onclick="return confirm('Are you sure to delete this record?');">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        sno++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="schoolDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content rounded-3 shadow"></div>
    </div>
</div>




<!-- Student Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsModalLabel">Student Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent">
                <div class="text-center text-muted">Loading...</div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <!-- jQuery + Bootstrap + DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/globalsearch.js"></script>

    <script>
        $(document).on("click", ".btn-details", function (e) {
            e.preventDefault();
            var url = $(this).attr("href");
            $("#schoolDetailsModal .modal-content").load(url, function () {
                $("#schoolDetailsModal").modal("show");
            });
        });

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).on("click", ".btn-details", function () {
            var id = $(this).data("id");
            $("#detailsContent").html('<div class="text-center text-muted">Loading...</div>');
            $("#detailsModal").modal("show");

            $.get("/StudentSection/DetailsClass/" + id, function (data) {
                $("#detailsContent").html(data);
            });
        });
    </script>


}
