                    </div>
                    <i class="fa fa-users fa-2x text-primary"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 2 -->
    <div class="col-md-3">
        <div class="card dashboard-card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted">Staff</h6>
                        <h3>56</h3>
                    </div>
                    <i class="fa fa-user-tie fa-2x text-success"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 3 -->
    <div class="col-md-3">
        <div class="card dashboard-card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted">Fees Collected</h6>
                        <h3>₹2.5L</h3>
                    </div>
                    <i class="fa fa-wallet fa-2x text-warning"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 4 -->
    <div class="col-md-3">
        <div class="card dashboard-card shadow-sm border-0">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted">Pending Fees</h6>
                        <h3>₹65K</h3>
                    </div>
                    <i class="fa fa-exclamation-circle fa-2x text-danger"></i>
                </div>
            </div>
        </div>
    </div>
</div>

