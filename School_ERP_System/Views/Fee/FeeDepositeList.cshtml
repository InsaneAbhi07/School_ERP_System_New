@* @model IEnumerable<School_ErP.Models.FeeDeposite> *@
@model IEnumerable<FeeReceiptSummaryVM>


<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/globalsrch.css" rel="stylesheet" />
</head>

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="fw-semibold text-primary"><i class="fa fa-school me-2"></i>Fee Deposite List</h5>
        <a asp-action="FeeDeposite" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i>Add New Fee
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-3">
            <table id="schoolTable" class="table table-hover table-bordered align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>Sr. No</th>
                        <th>Entry Date</th>
                        <th>Receipt No</th>
                        <th>Reg No</th>
                        <th>Pay Mode</th>
                        <th>Amount</th>
                        <th style="width:200px">Remark</th>
                        <th>User</th>
                        <th style="width:110px;">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int sno = 1;
                    }

                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@sno</td>
                            <td>@s.EntryDate.ToString("dd/MM/yyyy")</td>
                            <td>@s.ReceiptNo</td>
                            <td>@s.Regno</td>
                            <td>@s.PayMode</td>
                            <td>@s.Amount</td>
                            <td>@s.PayMode</td>
                            <td>@s.Remark</td>
                            <td class="text-center">
                                 
                                <a href="@Url.Action("EditFeeDeposite", "Fee", new { receiptNo = s.ReceiptNo })"
                                   class="btn btn-sm btn-warning">
                                    Edit
                                </a>
                                <button type="button" class="btn btn-info btn-sm text-white me-2 btn-details"
                                        data-id="@s.Id" title="View">
                                    <i class="fa fa-eye"></i>
                                </button>

                                <a asp-action="DeleteFee" asp-route-id="@s.Id"
                                   class="btn btn-danger btn-sm"
                                   title="Delete" onclick="return confirm('Are you sure to delete this record?');">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        sno++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="schoolDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content rounded-3 shadow"></div>
    </div>
</div>




<!-- Student Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsModalLabel">Old Fee Etries Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsContent">
                <div class="text-center text-muted">Loading...</div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <!-- jQuery + Bootstrap + DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/globalsearch.js"></script>

    <script>
            $(document).on("click", ".btn-details", function (e) {
                e.preventDefault();
                var url = $(this).attr("href");
                $("#schoolDetailsModal .modal-content").load(url, function () {
                    $("#schoolDetailsModal").modal("show");
                });
            });

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).on("click", ".btn-details", function () {
            var id = $(this).data("id");
            $("#detailsContent").html('<div class="text-center text-muted">Loading...</div>');
            $("#detailsModal").modal("show");

            $.get("/Fee/DetailsOldB/" + id, function (data) {
                $("#detailsContent").html(data);
            });
        });
    </script>



}
